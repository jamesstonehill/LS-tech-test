<h2>Edit User <%= @user.id %> </h2>

<%= form_for(@user) do |f| %>
  <table>
    <tr>
      <th>Email</th>
      <td> <%= @user.email %> </td>
    </tr>
    <tr>
      <th>Name</th>
      <td> <%= f.text_field(:name) %> </td>
    </tr>
    <tr>
      <th>Favorite Game</th>
      <td> <%= f.text_field(:favorite_game) %> </td>
    </tr>

  </table>
  <%= f.submit('Save') %>

<% end %>
<%= button_to 'Cancel', users_path %>
